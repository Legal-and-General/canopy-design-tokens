{
  "name": "canopy-design-tokens",
  "version": "0.0.0",
  "description": "Design tokens for the Canopy design system",
  "main": "config.json",
  "scripts": {
    "build": "npx style-dictionary build",
    "build:css": "npx style-dictionary build --platform css",
    "commit": "npx git-cz",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^6.0.0",
    "style-dictionary": "^2.10.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
